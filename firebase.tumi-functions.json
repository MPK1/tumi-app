{
  "database": {
    "rules": "apps/tumi-functions/database.rules.json"
  },
  "firestore": {
    "rules": "apps/tumi-functions/firestore.rules",
    "indexes": "apps/tumi-functions/firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/apps/tumi-app/browser",
    "predeploy":["npx nx run tumi-app:build:production --with-deps"],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/tumi-functions/storage.rules"
  },
  "functions": {
    "predeploy": [
      "npx nx build tumi-functions --with-deps",
      "npx nx lint tumi-functions"
    ],
    "source": "dist/apps/tumi-functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "auth": {
      "port": "9099"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
