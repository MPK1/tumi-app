{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tumi/app-shell": ["libs/app-shell/src/index.ts"],
      "@tumi/auth": ["libs/auth/src/index.ts"],
      "@tumi/data-access": ["libs/data-access/src/index.ts"],
      "@tumi/graphql": ["libs/graphql/src/index.ts"],
      "@tumi/models": ["libs/models/src/index.ts"],
      "@tumi/ui/event-templates": ["libs/ui/event-templates/src/index.ts"],
      "@tumi/ui/profile": ["libs/ui/profile/src/index.ts"],
      "@tumi/util-components": ["libs/util/components/src/index.ts"],
      "@tumi/util/material": ["libs/util/material/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
